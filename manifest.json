{
  "name": "interaction-detect",
  "version": "1.0",
  "description": "Detect session replay scripts",
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "webNavigation",
    "storage",
    "tabs",
    "contextMenus"
  ],
  "browser_action": {
    "default_popup": "user_interface/html/popup.html",
    "default_icon": { //"Designed by Alvaro_cabrera / Freepik"
      "16": "img/inspect16.png",
      "32": "img/inspect32.png",
      "64": "img/inspect64.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "user_interface/scripts/content/eventListeners.js",
        "user_interface/scripts/content/injectScript.js"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "scripts": [
      "user_interface/scripts/background/messageListener.js",
      "user_interface/scripts/background/interceptRequests.js"
    ],
    "type": "module",
    "persistent": false
  },
  "manifest_version": 2,
  "web_accessible_resources": [
    "user_interface/scripts/page/eventDetection.js",
    "img/exclamationMark.cur"
  ]
}